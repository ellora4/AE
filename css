/* General Page Styles */
body {
    font-family: 'Roboto', sans-serif; /* Font family */
    margin: 0;
    padding: 0;
    background-color: #f0f0f0; /* Background color for the entire page */
    color: #333; /* Text color */
}

/* Header Styles */
header {
    background-color: #4CAF50; /* Green background for the header */
    color: white; /* White text in header */
    text-align: center;
    padding: 20px 0; /* Padding to make it taller */
}

header h1 {
    font-size: 2.5rem; /* Font size for the header */
    margin: 0; /* Remove default margin */
}

/* About Section Styles */
#about {
    background-color: #ffffff; /* White background for the about section */
    padding: 20px;
    margin: 20px; /* Margin around the section */
    border-radius: 8px; /* Slight rounding of corners */
}

#about h2 {
    color: #4CAF50; /* Green color for subheading */
    font-size: 1.8rem;
}

#about p {
    font-size: 1rem;
    line-height: 1.6;
}

/* Contact Section Styles */
#contact {
    background-color: #ffffff; /* White background for the contact section */
    padding: 20px;
    margin: 20px;
    border-radius: 8px; /* Slight rounding of corners */
}

#contact h2 {
    color: #4CAF50; /* Green color for subheading */
    font-size: 1.8rem;
}

#contact p {
    font-size: 1rem;
    line-height: 1.6;
}

/* Footer Styles */
footer {
    background-color: #333; /* Dark background for the footer */
