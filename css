/* Apply a background color for the whole page */
body {
  font-family: Arial, sans-serif; /* Basic font family for the page */
  background-color: #f4f4f9; /* Light gray background color */
  margin: 0; /* Remove default margin */
  padding: 0; /* Remove default padding */
}

/* Header styling */
header {
  background-color: #3498db; /* Blue background color */
  color: white; /* White text color */
  text-align: center; /* Center the header text */
  padding: 20px 0; /* Add padding for spacing */
  margin-bottom: 30px; /* Add margin to separate header from content */
}

header h1 {
  font-size: 2.5rem; /* Larger font size for the heading */
  margin: 0; /* Remove margin around the heading */
}

/* Styling for the intro section */
#intro {
  background-color: white; /* White background for contrast */
  color: #333; /* Dark gray text color */
  padding: 40px 20px; /* Add padding inside the section */
  margin: 0 15%; /* Center the section and add left/right margins */
  border-radius: 8px; /* Slightly round the corners of the section */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Light shadow for a card-like effect */
}

#intro p {
  font-size: 1.2rem; /* Medium font size for the paragraph */
  line-height: 1.6; /* Improve readability with line spacing */
}

.nav-btn {
  background-color: #3498db; /* Blue background color for the button */
  color: white; /* White text on the button */
  padding: 10px 20px; /* Padding for the button */
  font-size: 1rem; /* Button text size */
  border: none; /* Remove default border */
  border-radius: 5px; /* Slightly round the button corners */
  cursor: pointer; /* Pointer cursor to show it's clickable */
  transition: background-color 0.3s ease; /* Smooth transition on hover */
}

.nav-btn:hover {
  background-color: #2980b9; /* Darker blue when hovering over the button */
}

/* Footer styling */
footer {
  background-color: #2c3e50; /* Dark background for footer */
  color: white; /* White text color */
  text-align: center; /* Center the footer text */
  padding: 15px 0; /* Add padding inside the footer */
  position: fixed; /* Fix the footer at the bottom */
  left: 0; /* Align it to the left */
  bottom: 0; /* Stick it to the bottom of the page */
  width: 100%; /* Ensure it spans the full width */
}

footer a {
  color: #ecf0f1; /* Light text color for links */
  text-decoration: none; /* Remove underline from links */
}

footer a:hover {
  text-decoration: underline; /* Add underline when hovering over the link */
}
